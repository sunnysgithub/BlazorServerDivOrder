@page "/"

<PageTitle>Home</PageTitle>

<div class="container">
    <div style="transform: translateY(calc((@_arr[0] * @HEIGHT) - (@HEIGHT * 0)))">1</div>
    <div style="transform: translateY(calc((@_arr[1] * @HEIGHT) - (@HEIGHT * 1)))">2</div>
    <div style="transform: translateY(calc((@_arr[2] * @HEIGHT) - (@HEIGHT * 2)))">3</div>
    <div style="transform: translateY(calc((@_arr[3] * @HEIGHT) - (@HEIGHT * 3)))">4</div>
    <div style="transform: translateY(calc((@_arr[4] * @HEIGHT) - (@HEIGHT * 4)))">5</div>
    <button style="width: 100%" @onclick="Shuffle">Shuffle</button>
</div>

@code {

    private readonly Random rnd = new Random();
    private readonly int[] _arr = [0, 1, 2, 3, 4];
    private const string HEIGHT = "30px";

    private void Shuffle()
    {
        int j, t = 0;
        for (int i = 0; i < _arr.Length; i++)
        {
            j = rnd.Next(0, 5);
            t = _arr[i];
            _arr[i] = _arr[j];
            _arr[j] = t;
        }

        InvokeAsync(StateHasChanged);
    }
}